<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <context id="DB2Tables" targetRuntime="MyBatis3">
        <plugin type="org.mybatis.generator.plugins.RowBoundsPlugin">
        </plugin>
        <!--   数据库连接     -->
        <jdbcConnection driverClass="org.Mysql.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/transfer"
                        userId="root"
                        password="123456">
        </jdbcConnection>
        <!---->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <!--生成Java模型-->
        <!-- windows 用 src\main\java   mac  src/main/java     -->
        <javaModelGenerator targetPackage="com.ywmoyu.tool.model" targetProject="src\main\java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!--xml 放到resource下了-->
        <sqlMapGenerator targetPackage="mapper" targetProject="src\main\resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <!-- dao 包 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.ywmoyu.tool.mapper" targetProject="src\main\java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="userinfo" domainObjectName="Userinfo">
        </table>
        <table tableName="operatelog" domainObjectName="Operatelog">
        </table>
    </context>
</generatorConfiguration>